<h1>Welcome to MessageMe - a complete Chat app</h1>

<h4>Log in to continue</h4>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:sessions, html: {class: "ui form", role:"form"}, url: login_path) do |f| %>
        <div class="field">
          <%= f.label :username, "username" %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, "password" %>
          <div class="ui left icon input">
            <%= f.text_field :password, placeholder: "Password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.button "Login", class: "ui blue submit button" %>        
      <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui big button blue">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>