<h2 class="ui center aligned medium icon header">
  <i class="circular blue users icon"></i>
  <!-- Si quisiera el del cafe <i class="circular grey coffe icon"></i> -->
  Friends
</h2>

<div class="ui tow colum grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui small feed">
          <!--h4 class="ui header">Followers Activity</h4-->
          <%= render @mesages %>                
        </div>
      </div>
      <div class="extra content">
        <form class="ui reply form">
          <div class="field">
            <div class="ui fluid icon input">
              <input type="text" placeholder="Enter a message">  
              <i class="bordered inverted blue edit icon"></i>            
          </div>
          </div>          
        </form>
      </div>
    </div>
  </div>
  
  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <a class="active item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
